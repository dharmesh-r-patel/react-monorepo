{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "yarn",
  "packages": [
    "packages/*"
  ],
  "ignoreChanges": [
    "**/src/test/**",
    "**/src/*.test.*"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "noGitTagVersion": true,
      "yes": true
    }
  }
}


