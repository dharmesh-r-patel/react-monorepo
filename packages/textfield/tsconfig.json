{
  "extends": "../../tsconfig.json",
  "exclude": [
      "node_modules",
      "build",
      "**/__tests__/*",
      "jest.setup.tsx",
      "dev",
      "types",
      "dev/examples.framer",
      "test",
      "skins",
      "dist",
      "temp",
      "api",
      "cypress"
  ],
  "compilerOptions": {
      "paths": {
        "@react-monorepo/hooks": ["../hooks/src"],
        "@react-monorepo/hooks/*": ["../hooks/src/*"]
    }
  }
}

